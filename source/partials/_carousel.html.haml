%header#myCarousel.carousel.slide
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      .fill{:style => "background-image:url('images/fraser.jpg');"}
      .carousel-caption
        %h2 In the heart of fraser valley
    .item
      .fill{:style => "background-image:url('images/fraser.jpg');"}
      .carousel-caption
        %h2 Supply wood products to wholesale and distributors
    .item
      .fill{:style => "background-image:url('images/fraser.jpg');"}
      .carousel-caption
        %h2 Premium wood shakes and shingles
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    %span.icon-prev
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    %span.icon-next
